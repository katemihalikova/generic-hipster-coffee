{% extends '_base.twig' %}


{% block title %}Coffee | {{ parent() }}{% endblock %}


{% block heading %}Coffee{% endblock %}


{% block nav %}
    {% include '__nav.twig' with {'currentPage': 'coffee'} %}
{% endblock %}


{% block content %}
    <p class="lead">We work with specialty coffee from current crops which is carefully roasted. Our coffee is fruity, juicy and never
        boring. We bring you the best from leading european specialty roasteries, currently mostly from <a href="https://shop.squaremilecoffee.com/">Square Mile Coffee
        Roasters</a>, a multi award winning coffee roasting company based in East London.</p>
    <p>You can currently buy these beans in 350 g bags</p>
    <div class="card-deck">
            {% for coffee in coffees %}
                <div class="ghc-card-coffee card flex-wrap border-0 mb-3">
                    <h3 class="card-header">{{ coffee.name }} ({{ coffee.origin }})</h3>
                    <img class="card-img-top img-fluid" src="{{ coffee.src }}"
                        srcset="{{ coffee.srcset }}"
                        sizes="
                                (min-width: 1200px) 495px,
                                (min-width: 992px) 405px,
                                (min-width: 768px) 285px,
                                (min-width: 576px) 490px,
                                calc(100vw - 2*25px)"
                        alt="{{ coffee.name }} ({{ coffee.origin }})">
                    <div class="card-body bg-light">
                        <p class="card-text">
                            <small class="text-muted">{{ coffee.taste }}</small>
                        </p>
                        <p class="card-text">{{ coffee.desc }}</p>
                        <p class="text-muted">Roasting date {{ post.published_at|date("F jS") }}</p>
                        <p class="price" itemprop="offer" itemscope="" itemtype="https://schema.org/Offer">
                            <meta itemprop="price" content="{{ coffee.price }}">
                            <meta itemprop="priceCurrency" content="usd">
                            <span class="actual">$ {{ coffee.price|number_format(2, '.') }}&nbsp;</span>
                        </p>
                    </div>
                </div>
            {% endfor %}
    </div>
{% endblock %}


{% block nav %}
    {% include '__nav.twig' with {'currentPage': 'coffee'} %}
{% endblock %}
